<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/udacity1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/two_hundred_ten"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t2"
        android:layout_marginLeft="@dimen/sixteen"
        android:text="@string/phone"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:autoLink="phone"
        android:textSize="@dimen/sixteen_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t3"
        android:layout_marginLeft="@dimen/sixteen"
        android:text="@string/website"
        android:textColor="@color/white"
        android:autoLink="web"
        android:textColorLink="@color/white"
        android:textSize="@dimen/sixteen_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sixteen"
        android:layout_marginLeft="@dimen/sixteen"
        android:text="@string/address"
        android:autoLink="map"
        android:textColorLink="@color/white"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_text_size"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/udactiy_textview_height"
        android:layout_marginTop="@dimen/hundred"
        android:background="@color/white"
        android:fontFamily="monospace"
        android:text="@string/udacity"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/fourty"
        android:textColor="@color/black"
        android:textColorLink="@color/white"
        android:textSize="@dimen/thirty_two" />

</RelativeLayout>
